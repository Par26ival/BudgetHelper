{
    "version": 2,
    "builds": [
        {
            "src": "frontend/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "build",
                "buildCommand": "cd frontend && npm install && npm run build"
            }
        },
        {
            "src": "backend/app.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/app.py"
        },
        {
            "src": "/login",
            "dest": "backend/app.py"
        },
        {
            "src": "/register",
            "dest": "backend/app.py"
        },
        {
            "src": "/transactions",
            "dest": "backend/app.py"
        },
        {
            "src": "/predict",
            "dest": "backend/app.py"
        },
        {
            "src": "/logout",
            "dest": "backend/app.py"
        },
        {
            "src": "/check-auth",
            "dest": "backend/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/build/$1"
        }
    ]
}